<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo">
	
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var rootFolder:File;
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="currentView" />
		<s:State name="currentOptions" />
	</s:states>
	
	<mx:FileSystemTree id="fileSystemTree" width="100%" height="100%" 
		   directory="{this.rootFolder}"
		   dragEnabled="true"
		   includeIn="currentView"
		   rightClick="{this.currentState = 'currentOptions'}"/>
	
	<s:VGroup horizontalAlign="center" width="100%" verticalCenter="0" includeIn="currentOptions">
		<s:Group>
			<s:Button width="200" />
			<s:HGroup gap="1" horizontalCenter="0" verticalCenter="0" mouseEnabled="false">
				<s:RichText text="create" mouseChildren="false" mouseEnabled="false"/>
				<s:RichEditableText text="..." />
				<s:RichText text="pdml here" mouseChildren="false" mouseEnabled="false"/>
			</s:HGroup>
		</s:Group>
	
		<s:Button label="create ... pdml here" width="200"  />
		<s:Button label="save as ...pdml here" width="200" />
		<s:Button label="create class path .... here" width="200" />
		<s:Button label="NONE OF THESE" width="200" click="{this.currentState = 'currentView'}"/>
	</s:VGroup>
	
</s:Group>
