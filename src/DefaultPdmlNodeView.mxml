<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo"
	width="100%">

	<fx:Script>
		<![CDATA[
			[Bindable]
			private var argsAsXml:XML;
			public override function set data(value:Object) : void
			{
				super.data = value;
				this.argsAsXml = XML(value);
				for each(var arg:XML in this.argsAsXml.children())
				{
					var argView:DefaultArgNodeView = new DefaultArgNodeView();
					argView.data = arg;
					this.argsContainer.addElement(argView);
				}
			}
		]]>
	</fx:Script>

	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	
    <s:states>
        <s:State name="normal"/>
        <s:State name="hovered"/>
        <s:State name="selected" />
    </s:states>
    
	<s:Rect width="100%" height="100%" includeIn="selected">
		<s:fill>
			<s:SolidColor color="gray" />
		</s:fill>
	</s:Rect>
	
	<s:VGroup width="100%">
		<s:SimpleText text="&lt;{this.argsAsXml.name()} classname=&quot;{this.argsAsXml.@classname}&quot;&gt;" width="100%" height="15"/>
		<s:Group width="100%">
			<s:VGroup left="20" width="100%" id="argsContainer" />	
		</s:Group>
		<s:SimpleText text="&lt;/{this.argsAsXml.name()}&gt;" width="100%" height="15"/>	
	</s:VGroup>
	
</s:ItemRenderer>
